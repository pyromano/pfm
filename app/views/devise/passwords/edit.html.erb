
<%= render "shared/alert" %>

<div class="row mt-5 text-center">
  <h2>Change your password</h2>
</div>
<div class="row mt-4">
  <div class="col-md-12 col-xl-12 d-flex justify-content-center">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-outline mb-4">
        <%= f.label :password, "New password", class: "form-label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-outline mb-4">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label"  %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <%= f.submit "Change my password", class: "btn btn-primary btn-block mb-4"  %>
      <div class="col">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
