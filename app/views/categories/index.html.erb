<%= render "shared/alert" %>
<div class="row mb-3">
  <div class="col-md-12">
    <h2>Categories</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="float-start">
      <%= search_form_for @q, class: "input-group" do |f| %>
        <%= f.search_field :name_or_description_cont, placeholder: "Search...", class: "form-control rounded" %>
        <%= f.submit "Search", class: "btn btn-outline-success" %>
      <% end %>

      </div>
    <div class="float-end">
      <%= link_to new_category_path, class: "btn btn-success" do %>
        <i class="fa fa-plus"></i> New operation
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div id="categories">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col"><%= sort_link(@q, :name, "Name", default_order: :asc, class: "link-secondary text-decoration-none") %></th>
            <th scope="col"><%= sort_link(@q, :money_flow, "Type", default_order: :asc, class: "link-secondary text-decoration-none") %></th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <%= render "category_row", category: category %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @categories %>
